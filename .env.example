# Used by the backend to generate links in emails to the frontend
FRONTEND_HOST=http://localhost:5173

# Environment: local, development, staging, production
ENVIRONMENT=local

PROJECT_NAME="Mony API"

# Server Configuration
# WORKERS=auto  # Auto-detect based on environment (1 for local, 2 for dev, 4 for prod)
# WORKERS=2     # Or set manually (recommended: 1-4 depending on your server resources)

# API Documentation Authentication
# Automatically enabled for production environment, disabled for local/dev
ENABLE_DOCS_AUTH=false
DOCS_USERNAME=admin
DOCS_PASSWORD=secure-docs-password-here
# Note: In production, set ENABLE_DOCS_AUTH=true and use strong credentials

# API
CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Postgres
PG_SERVER=localhost
PG_PORT=5432
PG_DB=monywallet
PG_USER=your-db-user
PG_PASSWORD=your-db-password

# OpenAI
OPEN_AI_SECRET_KEY=your-openai-api-key-here
OPEN_AI_MODEL=gpt-4o-mini

# Azure Configuration (for production)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_CONTAINER_NAME=receipts

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Optional: Use Redis URL instead of individual components
# REDIS_URL=redis://localhost:6379/0


# Logging Configuration
JSON_LOGS=false
LOG_LEVEL=INFO

# Auto-enable JSON logs in production
ENABLE_REQUEST_LOGGING=true
ENABLE_DATABASE_LOGGING=true
ENABLE_OPENAI_LOGGING=true

# Request logging exclusions
REQUEST_LOG_EXCLUDE_PATHS=["/docs", "/redoc", "/openapi.json", "/favicon.ico"]


